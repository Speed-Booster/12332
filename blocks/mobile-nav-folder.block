{.repeated section items}
  {.folder?}{.index?}{.or}
    <div class="Mobile-overlay-folder" data-controller-folder="{collection.urlId}">
      <button class="Mobile-overlay-folder-item Mobile-overlay-folder-item--toggle" data-controller-folder-toggle="{collection.urlId}"  aria-label="Back to {collection.navigationTitle} menu" >
        <span class="Mobile-overlay-folder-item--toggle-label">{localizedStrings.back}</span>
      </button>
      {.repeated section items}
        {.collection?}
          <a href="{collection.fullUrl}" class="Mobile-overlay-folder-item"  aria-label="{title}" >
            {collection.navigationTitle}
          </a>
        {.or}
          {.section externalLink}
            <a href="{url}" class="Mobile-overlay-folder-item">
              {title}
            </a>
          {.end}
        {.end}
      {.end}
    </div>
  {.end}{.end}
{.end}
